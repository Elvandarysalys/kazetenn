<!DOCTYPE html>
<html lang="">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/kazetenn/admin_style.css') }}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}

        {% trans_default_domain 'kazetenn_admin' %}
    </head>

    <body class="page-columns">
        <nav id="nav-top" class="navbar is-white">
            <div class="container">
                <div class="navbar-brand">
                    <a class="navbar-item" href="#">
                        Kazetenn
                    </a>
                </div>
                <div class="navbar-menu">
                    {% block nav_top %}
                        <p>
                            je suis une navbar top
                        </p>
                    {% endblock %}
                </div>
            </div>
        </nav>

        <section id="page-container" class="section" style="min-height: 77%; width: 100%;">
            <div id="page-content" class="columns container is-full" style="height: 100%; width: 100%; min-width: 100%">
                <div class="column is-3 aside_container">
                    <aside id="nav-side" class="menu is-hidden-mobile ">
                        {% block nav_side %}
                            {{ include('@KazetennAdmin/admin_menu.html.twig') }}
                        {% endblock %}
                    </aside>
                </div>

                <div class="column is-9 body_container" style="background-color: white;">
                    {% block body_hidden_infos %}{% endblock %}

                    <div id="body" class="section">
                        {% block body %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </section>

        <footer class="footer">
            <div class="content has-text-centered">
                <p>
                    Je suis un footer
                </p>
            </div>
        </footer>
    </body>
</html>
