<!DOCTYPE html>
<html lang="">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/kazetenn/admin_style.css') }}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}

        {% trans_default_domain 'kazetenn_admin' %}
    </head>

    <body class="page-columns">
        <nav id="nav-top" class="navbar admin-navbar is-white" role="navigation" aria-label="main navigation">
            <div class="navbar-brand admin-navbar-brand">
                <a class="navbar-item has-text-centered" href="{{ path('kazetenn_admin_admin_index') }}" style="width: 100%;">
                    Kazetenn
                </a>

                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarMenuTop">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>
            <div class="navbar-menu" id="navbarMenuTop">
                <div class="navbar-end">
                    {% block nav_top %}
                        {{ include('@KazetennAdmin/admin_menu_top.html.twig') }}
                    {% endblock %}
                </div>
            </div>
        </nav>

        <section id="page-container" class="section admin-page-container">
            <div id="page-content" class="columns container is-full admin-page-content">
                <div class="column is-2 aside_container">
                    <aside id="nav-side" class="menu is-hidden-mobile ">
                        {% block nav_side %}
                            {{ include('@KazetennAdmin/admin_menu.html.twig') }}
                        {% endblock %}
                    </aside>
                </div>

                <div class="column is-10 admin-body_container">
                    <span class="is-hidden">{% block body_hidden_infos %}{% endblock %}</span>

                    <div id="body" class="section">
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        </section>

        <footer class="footer admin-footer">
            <div class="content has-text-centered">
                <p>
                    {% trans %}kazetenn_admin_interface.footer.text{% endtrans %}
                </p>
            </div>
        </footer>
    </body>
</html>
