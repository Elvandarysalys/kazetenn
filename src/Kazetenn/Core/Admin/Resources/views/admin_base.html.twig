<!DOCTYPE html>
<html lang="">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/kazetenn/admin_style.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script crossorigin src="https://unpkg.com/react@17/umd/react.development.js"></script>
            <script crossorigin src="https://unpkg.com/react-dom@17/umd/react-dom.development.js"></script>
            {#            <script src="../../assets/js/admin/admin.js" defer></script>#}
            {# {{ encore_entry_script_tags('app') }} #}
        {% endblock %}

        {% trans_default_domain 'kazetenn_admin' %}
    </head>
    <body>
        <div id="main" class="main_container">

            <aside id="nav-side" class="page_nav">
                {% block nav_side %}
                    {{ include('@Kazetenn/admin/admin_menu.html.twig') }}
                {% endblock %}
            </aside>

            <div id="page-container" class="page_container">
                <div id="page-content" class="page_content">
                    <nav id="nav-top" class="page_header">
                        {% block nav_top %}
                            <p>
                                je suis une navbar top
                            </p>
                        {% endblock %}
                    </nav>

                    <div  class="page_body">
                        <div id="body" class="body_container">
                            {% block body %}
                            {% endblock %}
                        </div>
                    </div>

                    <div id="footer" class="page_footer">
                        {% block footer %}
                            <p>
                                Je suis un footer
                            </p>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
